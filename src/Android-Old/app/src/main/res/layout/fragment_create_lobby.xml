<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.swarmnyc.pup.ui.fragment.FragmentSignUp" android:padding="16dp">

        <!-- TODO: Update blank fragment layout -->


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="HOST: @PUP"
                android:layout_marginBottom="8dp"
                />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_game"
                style="@style/ExpandButton"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:gravity="left|center_vertical"
                android:text="STAR WARS | XBOX"/>

        <TextView
                android:hint="PICK GAME"
                android:layout_marginTop="16dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/txt_edit_game"
                android:hint="SEARCH"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_search"/>

        <android.support.v4.view.ViewPager
                android:id="@+id/pager_chat_members"
                android:visibility="gone"
                android:layout_width="match_parent" android:layout_height="124dp">
        </android.support.v4.view.ViewPager>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_room_cap"
                style="@style/ExpandButton"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:gravity="left|center_vertical"
                android:text="5 PLAYERS"/>

        <TextView
                android:hint="ROOM SIZE"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <SeekBar
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_game_time"
                style="@style/ExpandButton"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:gravity="left|center_vertical"
                android:text="START: 5 MIN"/>

        <TextView
                android:hint="STARTS IN"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <SeekBar

                android:layout_width="match_parent" android:layout_height="wrap_content"/>


        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
        <!--android:layout_marginTop="16dp"-->

        <!--android:text="START TIME"-->
        <!--/>-->

        <!--<SeekBar-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="16dp"/>-->

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_gamer_style"
                style="@style/ExpandButton"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:gravity="left|center_vertical"
                android:text="CASUAL PLAY"/>


        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/btn_pc"
                        android:text="CASUAL"
                        style="@style/GamingSystemButton" android:layout_height="wrap_content"/>

                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/btn_xbox_360"
                        android:text="NORMAL"
                        style="@style/GamingSystemButton"
                        android:layout_gravity="center|fill" android:layout_height="wrap_content"/>

                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_column="2"

                        android:id="@+id/btn_xbox_one"
                        android:text="HARDCORE"
                        style="@style/GamingSystemButton"

                        android:layout_gravity="center|fill" android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="8dp"
                android:text="DESCRIPTION"
                />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="left|top"
                android:ems="10"
                android:lines="2"
                android:hint="Let people know what kind more detials of gamer yor're looking for"
                android:layout_marginBottom="8dp"
                android:id="@+id/txt_description"/>

        <Button
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:layout_width="match_parent"

                android:id="@+id/btn_sign_up"

                style="@style/ActionButton"
                android:text="Create Lobby" android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>