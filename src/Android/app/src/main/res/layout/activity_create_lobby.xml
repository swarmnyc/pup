<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.swarmnyc.pup.activities.CreateLobbyActivity">

    <EditText
        android:id="@+id/text_gameId"
        android:hint="Game Id"
        android:text="54fa237d18d9ca29f09367d6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/text_name"
        android:hint="Name"
        android:text="Test 4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Spinner
        android:id="@+id/spinner_play_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinner_skill_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Submit" />
</LinearLayout>
