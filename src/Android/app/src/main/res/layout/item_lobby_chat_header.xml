<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:showIn="@layout/fragment_lobby">

    <ImageView
            android:id="@+id/img_game"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_header_img"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_header_img"
            android:background="@drawable/gradient_dark_70"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/text_name"
            android:layout_alignBottom="@id/img_game"
            android:layout_margin="@dimen/margin_normal"
            android:textColor="@color/pup_white"
            android:textSize="@dimen/text_bigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/text_lobby_type"
            android:layout_margin="@dimen/margin_normal"
            android:layout_below="@id/img_game"
            android:textColor="@color/pup_orange"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="CASUAL,HARDCORE"/>

    <TextView
            android:id="@+id/text_description"
            android:layout_below="@id/text_lobby_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"/>

    <View
            style="@style/horizontal_line"
            android:layout_below="@+id/text_description"/>
</RelativeLayout>