<com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:background="@android:color/transparent"
        app:umanoPanelHeight="10dp"
        app:umanoShadowHeight="4dp"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.swarmnyc.pup.ui.fragment.FragmentLobbyList"
            android:descendantFocusability="beforeDescendants"
            >

        <android.support.v7.widget.RecyclerView
                android:id="@+id/list_lobby"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <Button
                android:id="@+id/btn_create_lobby"
                android:text="@string/button_add"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_round_orange"
                android:textSize="@dimen/btn_plus_size"
                android:layout_width="@dimen/button_hover_size"
                android:layout_height="@dimen/button_hover_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_2x"/>


    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
                android:id="@+id/layout_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/txt_game_serach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_search_games"
                    android:layout_margin="@dimen/margin_normal"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_select_preferred_system"
                    android:textSize="@dimen/text_label"
                    android:textColor="@color/pup_orange"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginStart="@dimen/margin_normal"
                    />

            <com.swarmnyc.pup.view.SystemSelectView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </com.swarmnyc.pup.view.SystemSelectView>

        </LinearLayout>

        <ImageView
                android:id="@+id/img_top_drawer_handle"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/drawer_shadow"
                android:background="@color/pup_aqua"/>


    </LinearLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>





