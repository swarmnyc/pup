<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.swarmnyc.pup.ui.fragment.FragmentLobbyList"
                android:descendantFocusability="beforeDescendants"
        >



    <android.support.v7.widget.RecyclerView
            android:id="@+id/list_lobby"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    <com.swarmnyc.pup.view.MultipleOrientationSlidingDrawer
            android:id="@+id/drawer_filter"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:handle="@+id/img_top_drawer_handle"
            app:content="@+id/layout_fitler"
            app:orientation="top"
            android:background="@android:color/transparent"
            >

        <ImageView
                android:id="@+id/img_top_drawer_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:src="@drawable/drawer_shadow"/>

        <LinearLayout
                android:id="@+id/layout_fitler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/txt_game_serach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>





    </com.swarmnyc.pup.view.MultipleOrientationSlidingDrawer>




    <Button
            android:id="@+id/btn_create_lobby"
            android:text="@string/button_add"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_round_orange"
            android:textSize="@dimen/btn_plus_size"
            android:layout_width="@dimen/button_hover_size"
            android:layout_height="@dimen/button_hover_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_2x"/>

</RelativeLayout>
