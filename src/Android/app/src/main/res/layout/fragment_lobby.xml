<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container"
                android:visibility="invisible"
                tools:visibility="visible">

    <ScrollView
            android:layout_above="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/img_game"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_header_img"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_header_img"
                    android:background="@drawable/gradient_dark_70"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            <TextView
                    android:id="@+id/text_name"
                    android:layout_alignBottom="@id/img_game"
                    android:layout_margin="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_bigger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/text_lobby_type"
                    android:layout_margin="@dimen/margin_normal"
                    android:layout_below="@id/img_game"
                    android:textColor="@color/pup_orange"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="CASUAL,HARDCORE"/>

            <TextView
                    android:id="@+id/text_description"
                    android:layout_below="@id/text_lobby_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginBottom="@dimen/margin_normal"/>

            <View
                    style="@style/horizontal_line"
                    android:layout_below="@+id/text_description"/>

            <include
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/text_description"
                    layout="@layout/view_share"/>

            <ListView
                    android:id="@+id/list_chat"
                    android:layout_below="@id/share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </ListView>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
            android:background="@color/white"
            android:id="@+id/text_panel"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View
                style="@style/horizontal_line_bold"/>

        <EditText
                android:id="@+id/text_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_toLeftOf="@+id/btn_submit"/>

        <Button
                android:id="@+id/btn_submit"
                android:text="Send"
                style="@style/button_text"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>



    <TextView
            android:id="@+id/btn_join"
            android:layout_alignParentBottom="true"
            android:text="@string/text_register_and_join"
            style="@style/button_orange"
            android:visibility="invisible"/>
</RelativeLayout>