<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultipleOrientationSlidingDrawer">
        <attr name="orientation">
            <enum name="top" value="0" />
            <enum name="left" value="1" />
            <enum name="bottom" value="2" />
            <enum name="right" value="3" />
        </attr>
        <attr name="handle" format="reference" />
        <attr name="content" format="reference" />
        <attr name="bottomOffset" format="dimension" />
        <attr name="topOffset" format="dimension" />
        <attr name="allowSingleTap" format="boolean" />
        <attr name="animateOnClick" format="boolean|color" />
    </declare-styleable>

    <declare-styleable name="GamePlatformSelectView">
        <attr name="allowMultiSelect" format="boolean"  />
    </declare-styleable>

    <declare-styleable name="FontableTextView">
        <attr name="font" format="string"  />
    </declare-styleable>

    <declare-styleable name="HorizontalSpinner">
        <attr name="itemTextFont" format="string"  />
        <attr name="itemSelectColor" format="color"  />
        <attr name="itemSelectTextSize" format="dimension"  />
        <attr name="itemColor" format="color"  />
        <attr name="itemTextSize" format="dimension"  />
        <attr name="itemWidth" format="dimension"  />
    </declare-styleable>
</resources>