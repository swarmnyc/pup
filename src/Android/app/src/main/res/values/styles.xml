<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
    </style>


    <style name="LobbyTheme" parent="BaseAppTheme">
    </style>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/pup_white</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/pup_white</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/pup_orange</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/pup_orange</item>

        <item name="android:textSize">16sp</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/pup_white</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/pup_orange</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/pup_orange</item>
    </style>

    <style name="UserVoiceTheme" parent="Theme.AppCompat.Light" >
        <item name="android:windowBackground">@color/pup_white</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/pup_white</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/pup_orange</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/pup_orange</item>
    </style>

    <style name="MainActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@color/pup_teal</item>
        <item name="android:textColorPrimary">@color/pup_teal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedTitleText">
        <item name="android:textColor">@color/pup_white</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>

    <style name="SelectButton">
        <item name="android:background">@drawable/bg_select_button</item>
        <item name="android:textColor">@color/text_select_button</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/pup_orange</item>
    </style>

    <style name="horizontal_line_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/pup_light</item>
    </style>

    <style name="horizontal_line_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3px</item>
        <item name="android:background">@color/pup_orange</item>
    </style>

    <style name="text_option_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:textColor">@color/pup_teal</item>
        <item name="android:textSize">@dimen/text25</item>
        <item name="font">@string/font_roboto_slab</item>
    </style>

    <style name="button_teal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:background">@drawable/button_teal</item>
        <item name="android:textColor">@color/always_white</item>
        <item name="android:textSize">@dimen/text25</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_text</item>
        <item name="android:textColor">@color/button_orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_orange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:textColor">@color/always_white</item>
        <item name="android:textSize">@dimen/text25</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HorizontalSpinnerStyleForLobbyCreate">
        <item name="itemColor">@color/pup_light</item>
        <item name="itemTextSize">@dimen/text11</item>
        <item name="itemSelectColor">@color/pup_teal</item>
        <item name="itemSelectTextSize">@dimen/text25</item>
        <item name="itemTextFont">@string/font_roboto_slab</item>
        <item name="itemWidth">150dp</item>
        <item name="itemHeight">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
    </style>

    <style name="text_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pup_grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/pup_light</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
